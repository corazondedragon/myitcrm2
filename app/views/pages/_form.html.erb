
  <%= simple_form_for(@page) do |f| %>
      <%= f.error_notification %>

     <%= f.input :name %>
     <%= f.input :permalink, :hint => "Don't use spaces between words. Please insert _ underscores instead" %>
     <%= markdown_hint %>
      <%= f.input :content, :input_html => {:cols => 60, :rows => 15 } %>
       <p>
        <%= f.input :page_category_name%>
       </p>
      <%= content_tag :div, f.submit, :class => "center" %>
      <% end %>

